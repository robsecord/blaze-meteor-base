{
  "name": "manager",
  "description": "INSTANT Financial - Manager App",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "pretest": "npm run lint --silent",
    "test": "meteor test --once --driver-package dispatch:mocha-phantomjs",
    "test:app": "meteor test --full-app --once --driver-package dispatch:mocha-phantomjs",
    "test:watch": "meteor test --driver-package practicalmeteor:mocha"
  },
  "dependencies": {
    "autoprefixer": "6.3.7",
    "bcrypt": "0.8.7",
    "bootstrap": "3.3.7",
    "core-js": "2.4.0",
    "faker": "3.0.1",
    "lodash": "4.14.2",
    "meteor-node-stubs": "0.2.0"
  },
  "devDependencies": {
    "babel-eslint": "6.1.2",
    "eslint": "3.3.1",
    "eslint-config-airbnb": "10.0.1",
    "eslint-import-resolver-meteor": "0.3.1",
    "eslint-plugin-import": "1.13.0",
    "eslint-plugin-jsx-a11y": "2.1.0",
    "eslint-plugin-meteor": "4.0.0",
    "eslint-plugin-react": "6.1.1"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
